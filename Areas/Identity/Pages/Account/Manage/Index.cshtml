@page
@using BuildingSiteManagementWebApp.Common.Constants
@model IndexModel
@{
    ViewData["Title"] = @TextsLang.PersonalInfo;
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        @if (User.IsInRole("Admin"))
        {
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />

                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.NationalId"></label>
                    <input asp-for="Input.NationalId" class="form-control" />
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">@TextsLang.Save</button>
            </form>
        }
        else
        {
            <p>@TextsLang.FullName : @Model.Input.Name @Model.Input.LastName</p>
            <p>@TextsLang.NationalId : @Model.Input.NationalId</p>
            <p>@TextsLang.ContactAdminToChange</p>
        }
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}